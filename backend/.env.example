# Example environment variables for DLMS backend
# Copy this file to .env and fill in real values locally.

# Server
PORT=5004
NODE_ENV=development

# Database
# MongoDB connection string (cloud/Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/<database>?retryWrites=true&w=majority

# JWT
JWT_SECRET=change_this_in_production

# Email (for verification and notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=<your_gmail_address>
EMAIL_PASSWORD=<your_app_password>
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Frontend URL (for building links in emails)
FRONTEND_URL=http://localhost:3000

